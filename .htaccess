# ------------------------------------------
# Prevent directory listing
# ------------------------------------------

IndexIgnore * 
Order deny,allow
Allow from *

# ------------------------------------------
# Rewrite so that php extentions are not shown
# ------------------------------------------
RewriteEngine on

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php